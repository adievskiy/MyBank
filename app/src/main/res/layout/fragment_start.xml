<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StartFragment"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/bankNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textBankNameTV"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#4909B8"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/startImageIV"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/startTextTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="200dp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/startBTN"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/textStartBTN"
        android:textSize="18sp"
        android:layout_marginTop="300dp"
        android:visibility="gone"/>

</FrameLayout>